<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangNhap"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:background="@drawable/bod">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/mhc6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back,"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/coffe_text_color"/>
    <TextView
        android:id="@+id/tv_mhc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="It's delicious, it's cheap, it's fast."
        android:textColor="@color/coffe_text_color"/>

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="60dp"
        android:hint="Phone"
        android:textColorHint="#2E2E2E"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="15dp"/>

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:hint="Password"
        android:textColorHint="#2E2E2E"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="15dp"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/tv_forgetpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:text="Forget Password"
        android:textColor="#3391DC"
        android:textStyle="bold"
        android:gravity="end"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2E2E2E"
        android:background="@drawable/bg_btn"
        android:text="Login"
        android:textColor="#fff"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Don't have an Account?"
            android:textColor="@color/coffe_button"/>
        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text=" Signup"
            android:textColor="#3391DC"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>