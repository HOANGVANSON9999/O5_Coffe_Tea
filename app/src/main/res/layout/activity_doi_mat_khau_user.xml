<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoiMatKhauUser"
    android:orientation="vertical"
    android:background="@color/coffe_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/img_back1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="100dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Mật khẩu cũ"
        android:layout_marginTop="25dp"
        android:textColor="@color/coffe_text_color"
        android:textSize="20dp"/>

    <EditText

        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_currpass"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:textColorHint="#fff"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/border_radius"
        android:drawablePadding="15dp"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Mật khẩu mới"
        android:layout_marginTop="30dp"
        android:textColor="@color/coffe_text_color"
        android:textSize="20dp"/>

    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_newpass"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"

        android:textColorHint="#fff"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/border_radius"
        android:drawablePadding="15dp"
        android:inputType="textPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Xác nhận mật khẩu mới"
        android:layout_marginTop="30dp"
        android:textColor="@color/coffe_text_color"
        android:textSize="20dp"/>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:textColorHint="#fff"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/border_radius"
        android:drawablePadding="15dp"
        android:inputType="textPassword" />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="@null"
        android:text="Update"
        android:background="@drawable/bg_btn"
        android:textColor="@color/coffe_text_color" />

</LinearLayout>