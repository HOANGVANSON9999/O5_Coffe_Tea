<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DangNhap"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical"
    android:background="@color/coffe_text_color">

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:src="@drawable/mhc6"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back,"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="@color/coffe_button"/>
    <TextView
        android:id="@+id/tv_mhc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="It's delicious, it's cheap, it's fast."
        android:textColor="@color/coffe_color"/>


    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="60dp"
        android:hint="Full Name"
        android:textColorHint="#2E2E2E"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/ic_baseline_person_24_1"
        android:drawablePadding="15dp"/>

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/border_radius"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="15dp"
        android:hint="E-Mail"
        android:padding="15dp"
        android:textColorHint="#2E2E2E" />

    <EditText
        android:id="@+id/edt_phone"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:hint="Phone No"
        android:textColorHint="#2E2E2E"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/baseline_phone_24"
        android:drawablePadding="15dp" />

    <EditText
        android:id="@+id/edt_pass"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="60dp"
        android:hint="Password"
        android:textColorHint="#2E2E2E"
        android:background="@drawable/border_radius"
        android:padding="15dp"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="15dp"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#2E2E2E"
        android:background="@drawable/border"
        android:text="Signup"
        android:textColor="#fff"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Already have an Account?"
            android:textColor="@color/coffe_color"/>
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19dp"
            android:text=" LOGIN"
            android:textColor="#3391DC"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>



